---
import "@styles/global.css";
import SideBar from "@comp/SideBar.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script>
      // if (localStorage.getItem("apiToken") == undefined) {
      //   window.location.href = "/login";
      // }
    </script>
    <ClientRouter />
  </head>
  <body>
    <SideBar transition:persist />
    <main class="p-2 flex-1 bg-slate-200">
      <slot />
    </main>
  </body><style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      display: flex;
    }
  </style>
</html>
